[Unit]
Description=Fishnet client
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/systemd-inhibit --what=sleep \
  --why="Fishnet is analyzing games for Lichess" \
  /media/git/fishnet/target/release/fishnet run \
  --conf /media/git/fishnet/target/release/fishnet.ini
KillMode=mixed
WorkingDirectory=/tmp
PrivateTmp=true
Restart=on-failure

[Install]
WantedBy=default.target