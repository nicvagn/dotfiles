# Path to your Oh My Zsh installation.
export ZSH="$HOME/.oh-my-zsh"
source $ZSH/oh-my-zsh.sh
# more zsh-completions
fpath+=${ZSH_CUSTOM:-${ZSH:-~/.oh-my-zsh}/custom}/plugins/zsh-completions/src
# why we use OMZ
ZSH_THEME="nrv"

CASE_SENSITIVE="true"
HYPHEN_INSENSITIVE="true"

zstyle ':omz:update' frequency 13
ENABLE_CORRECTION="false"

# OMZ plugins
plugins=(
    git
    python
    pyenv
    zsh-autosuggestions
    alias-finder
    docker
    zsh-syntax-highlighting
)

source $ZSH/oh-my-zsh.sh

### User configuration ###

## aliases ##
# pnpm
alias pm="pnpm"
# power
alias down="shutdown -h now"
alias restart="shutdown -r now"
alias suspend="systemctl suspend"
alias hibernate="systemctl hibernate"
# dnf
alias up="sudo dnf upgrade"
alias get="sudo dnf install"
alias rem="sudo dnf remove"
# ff
alias ff="firefox"
# git
alias gs="gsw" # I have no idea what ghost script is
alias lg="g lg"
alias gpa="git push --all"
# random
alias e="emacsclient -c"
alias se="sudo emacs"
alias svim="sudo vim"
alias top="htop"
alias .="source" # IDK, was not?
alias serve="autoreload-server &"

# nrv conf fin
# virtual env wrapper install
export WORKON_HOME=~/.venvs/
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python
source ~/.local/bin/virtualenvwrapper.sh



# The following lines were added by compinstall
zstyle ':omz:plugins:alias-finder' autoload yes # disabled by default
zstyle ':completion:*' completer _expand _complete _ignored _correct _approximate
zstyle ':completion:*' format '|%d|'
zstyle ':completion:*:builtins' list-colors '=*=1;38;5;142'
zstyle ':completion:*' matcher-list 'm:{[:lower:]}={[:upper:]}' 'm:{[:lower:][:upper:]}={[:upper:][:lower:]}' 'r:|[._-]=** r:|=**'
zstyle ':completion:*' max-errors 3
zstyle ':completion:*' prompt '%e X'
zstyle ':completion:*' use-compctl true
zstyle :compinstall filename '/home/nrv/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall
# direnv hook
eval "$(direnv hook zsh)"

# tilix vte.sh crap
if [ $TILIX_ID ] || [ $VTE_VERSION ]; then
        source /etc/profile.d/vte.sh
fi

# C-<backspace> backward kill word
bindkey '^H' backward-kill-word

#  LocalWords:  direnv
